    <!-- jQuery Code -->

    <!-- Legend Tooltip -->
    <script>
      var legendtip = d3.select("body")
        .append("div") 
        .attr("class", "legendtip") 

      var legend_info = d3.select("#legend-title-info")
        .on("mouseover", function(){
          legendtip.transition()
            .duration(200)
            .style("opacity", .9)
            legendtip.html("<div> Number of offenders convicted in that county </div>" )
            .style("left", (d3.event.pageX) + "px")
            .style("top", (d3.event.pageY - 50) + "px")
        })
        .on('mouseout', function(d){
          legendtip.transition()
          .duration(500)
          .style("opacity", 0)
        })
    </script>
    <!-- Number count-up -->
    <script>
      var isPassed = 0;
      $(window).scroll(function() {
        var oTop = $('#counter').offset().top - window.innerHeight;
        if (isPassed == 0 && $(window).scrollTop() > oTop) {
          $('.counter-value').each(function() {
            var $this = $(this),
              countTo = $this.attr('data-count')
            $({
              countNum: $this.text()
            }).animate({
                countNum: countTo
              },
              {
                duration: 3500,
                easing: 'swing',
                step: function() {
                  $this.text(Math.floor(this.countNum));
                },
                complete: function() {
                  $this.text(this.countNum);
                }
              })
          })
          isPassed = 1
        }

      })
    </script>
